
@model TechJobsPersistent.ViewModels.AddJobViewModel

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Employer"></label>
        <select asp-for="EmployerId" asp-items="Model.Employer">
            <option value="">Select Employer</option>
        </select>
        <a asp-controller="Employer" asp-action="Add">New Employer</a>
        <span asp-validation-for="EmployerId"></span>

    </div>
    <div class="form-group">
        
        @foreach (var skill in Model.Skills)
        {
        <label>
            @skill.Text
                    <input type="checkbox" name="selectedSkills" value="@skill.Value" />
                </label>
        }
        <br />
        <span asp-validation-for="Skills"></span>

        <p><a asp-controller="Skill" asp-action="Add">Add a Skill</a></p>

    </div>

    <input type="submit" value="Add Job" />

</form>

    

